{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "focus": true,
                "panel": "dedicated"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "type": "markdownlint",
            "problemMatcher": [
                "$markdownlint"
            ],
            "label": "markdownlint: Lint all Markdown files in the workspace with markdownlint"
        },
        {
            "type": "deno",
            "command": "upgrade",
            "problemMatcher": [
                "$deno"
            ],
            "label": "deno: upgrade"
        },
        {
            "type": "deno",
            "command": "bundle",
            "problemMatcher": [
                "$deno"
            ],
            "group": "build",
            "label": "deno: bundle"
        }
    ]
}